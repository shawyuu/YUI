}

/* ==================
        复选框样式
 ==================== */

 .yu-checkbox{
  background: #fff;
  padding:12px 15px;
  font-size: 15px;
  display: flex;
  display: -webkit-flex;
}
 .yu-checkbox-line{
  background: #fff;
  padding: 12px 15px;
  position: relative;
  font-size: 15px;
  display: flex;
  display: -webkit-flex;
}

 .yu-checkbox-line::after {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  left: 15px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e6e6e6;
}
.yu-checkbox-hd checkbox{
  transform: scale(0.8);
}
.yu-checkbox-bd{
  -webkit-flex: 1;
  flex: 1;
}
.yu-checkbox-bd text{
  line-height:24px;
  font-size:15px;
}

