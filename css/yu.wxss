/* ==================
        初始化
 ==================== */

page {
  background: #f2f2f2;
  font-size: 30rpx;
  color: #000;
}

image {
  vertical-align: middle;
  border: none;
}

/* ==================
        基本通用样式
 ==================== */

/* 元素类型 */

.yu-block {
  display: block;
}

.yu-inline {
  display: inline;
}

.yu-inblock {
  display: inline-block;
}

/* 圆角 */

.yu-radius-sm {
  border-radius: 10rpx;
}

.yu-radius {
  border-radius: 16rpx;
}

.yu-radius-lg {
  border-radius: 24rpx;
}

.yu-round {
  border-radius: 1000rpx;
}

/* 元素对齐 */

.yu-align-l {
  text-align: left;
}

.yu-align-c {
  text-align: center;
}

.yu-align-r {
  text-align: right;
}

.yu-align-j {
  text-align: justify;
}

/* 文本溢出显示省略号(单行/两行/三行) */

.yu-ellipsis {
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.yu-ellipsis-two {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.yu-ellipsis-three {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

