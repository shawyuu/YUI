.yu-form {
  background: #fff;
  padding: 0 15px;
  position: relative;
  height: 48px;
  font-size: 15px;
  display: flex;
  display: -webkit-flex;
}

.yu-form::after {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  left: 15px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e6e6e6;
}

.yu-form-hd {
  line-height: 48px;
  width: 72px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 15px;
}

.yu-form-bd {
  -webkit-flex: 1;
  flex: 1;
}
.yu-action-value {
  height: 32px;
  line-height: 32px;
  padding: 8px 10px;
  min-width:100px;
  max-width:180px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.yu-action-placeholder{
  color:#888;
  height: 32px;
  line-height: 32px;
  padding: 8px 10px;
}

.yu-form-ft {
  text-align: right;
  position: relative;
}

.yu-form-ft.yu-cell-icon {
  padding-right: 30rpx;
}

.yu-form-ft.yu-cell-icon::after {
  content: '';
  display: inline-block;
  width: 8px;
  height: 8px;
  border-top: 1rpx solid #999;
  border-right: 1rpx solid #999;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  vertical-align: middle;
  position: absolute;
  top: 50%;
  right: 2px;
  margin-top: -4px;
}