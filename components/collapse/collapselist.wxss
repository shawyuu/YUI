.yu-collapse-item {
  background-color: #fff;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding: 12px 15px;
  font-size: 15px;
}

.yu-collapse-item::before {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  left: 15px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e6e6e6;
}

.yu-collapse-hover {
  background: #f5f5f5;
}
.yu-collapse-hd{
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}
.yu-collapse-hd .yu-collapse-img {
  width: 18px;
  margin-right: 8px;
}

.yu-collapse-bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height: 24px;
  line-height: 24px;
}

.yu-collapse-ft {
  text-align: right;
  color: #999;
  position: relative;
  padding-right: 30rpx;
  transition: transform 0.5s;
  -webkit-transition: transform 0.5s; 
}

.yu-collapse-ft::after {
  content: '';
  display: inline-block;
  width: 8px;
  height: 8px;
  border-top: 1rpx solid #999;
  border-right: 1rpx solid #999;
  transform: rotate(135deg);
  -webkit-transform: rotate(135deg);
  vertical-align: middle;
  position: absolute;
  top: 50%;
  right: 2px;
  margin-top: -7px;
}

.yu-collapse-show {
  transform: rotate(180deg);
  -webkit-transform: rotate(180deg);
  transition: transform 0.5s;
  -webkit-transition: transform 0.5s; 
}

.yu-collapse-content{
  padding: 8px 15px;
}
