.yu-form {
  background: #fff;
  padding: 0 15px;
  position: relative;
  height: 48px;
  font-size: 15px;
  display: flex;
  display: -webkit-flex;
}

.yu-form::after {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  left: 15px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e6e6e6;
}

.yu-form-hd {
  line-height: 48px;
  width: 72px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 15px;
}

.yu-form-bd {
  -webkit-flex: 1;
  flex: 1;
}

.yu-form-bd-input {
  height: 32px;
  line-height: 32px;
  padding: 8px 10px;
}

.yu-form-input-btn {
  /* #576B95 */
  background: #f2f2f2;
  color: #06ae56;
  width:96px;
  height: 32px;
  line-height: 32px;
  border-radius: 4px;
  margin: 8px 0;
  text-align: center;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.yu-form-input-btn-hover {
  background: #ddd;
}

.yu-form-input-icon {
  width: 18px;
  height: 18px;
  padding: 15px 10px;
  vertical-align:inherit;
}

.yu-form-imgcode {
  width: 96px;
  height: 32px;
  margin: 8px 0;
  border-radius:4px;
  overflow: hidden;
}

.yu-form-imgcode image {
  width: 100%;
  height: 100%;
  vertical-align:inherit;
}
