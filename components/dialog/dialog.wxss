/* ==================
        对话框dialog
 ==================== */

.yu-mask {
  position: fixed;
  z-index: 999;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
}

.yu-dialog-box {
  position: fixed;
  z-index: 999;
  width: 80%;
  max-width: 600rpx;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);
  background-color: #fff;
  text-align: center;
  border-radius: 10rpx;
  overflow: hidden;
}

.yu-dialog-title {
  padding: 20rpx 30rpx;
  font-weight: 400;
  font-size: 16px;
  word-wrap: break-word;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.yu-dialog-content {
  padding: 24rpx 30rpx;
  min-height: 80rpx;
  font-size: 14px;
  line-height: 1.4;
  word-wrap: break-word;
  word-break: break-all;
  color: #999;
  max-height: 800rpx;
  overflow-y: auto;
}
.yu-dialog-text-justify{
  text-align:justify;
}
.yu-dialog-text-left{
  text-align:left;
}
.yu-dialog-text-center{
  text-align:center;
}
.yu-dialog-text-right{
  text-align:right;
}
.yu-dialog-btn {
  position: relative;
  height: 96rpx;
  font-size: 16px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.yu-dialog-btn::before {
  position: absolute;
  z-index: 3;
  right: 0;
  top: 0;
  left: 0;
  height: 2rpx;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e6e6e6;
}

.yu-dialog-btn-default {
  line-height: 96rpx;
  height: 96rpx;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #333;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  box-sizing: border-box;
}

.yu-dialog-btn-default::after {
  position: absolute;
  z-index: 3;
  right: 0;
  top: 0;
  bottom: 0;
  width: 2rpx;
  content: '';
  -webkit-transform: scaleX(0.5);
  transform: scaleX(0.5);
  background-color: #e6e6e6;
}

.yu-dialog-btn-default:active, .yu-dialog-btn-primary:active {
  background: #f5f6f7;
}

.yu-dialog-btn-primary {
  line-height: 96rpx;
  height: 96rpx;
  display: block;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  color: #3279e4;
  text-decoration: none;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  position: relative;
  box-sizing: border-box;
}

/* flex布局 */

.flex-container {
  display: flex;
  display: -webkit-flex;
}

.flex-item {
  -webkit-flex: 1;
  flex: 1;
}
