.about .header {
  position: relative;
  padding-bottom: 60rpx;
}

.about .header .yu-cell {
  background: none;
}

.about .header .yu-cell::before {
  display: none;
}

.about .header-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  width: 100%;
  mix-blend-mode: screen;
}

.service {
  width: 100%;
  height: 84rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 99;
  opacity: 0.01;
  filter: alpha(opacity=1);
}
