.about .header {
  position: relative;
  padding-bottom: 60rpx;
}

.about .header .yu-cell {
  background: none;
}

.about .header .yu-cell::before {
  display: none;
}

.about .header-bg {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
  width: 100%;
  mix-blend-mode: screen;
}

.service {
  width: 100%;
  height: 84rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  z-index: 99;
  opacity: 0.01;
  filter: alpha(opacity=1);
}

/* 单元格 */
.yu-cell {
  background-color: #fff;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
  padding: 12px 15px;
  font-size: 15px;
}

.yu-cell::before {
  position: absolute;
  z-index: 3;
  right: 0;
  bottom: 0;
  left: 15px;
  height: 1px;
  content: '';
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  background-color: #e6e6e6;
}

.yu-cell-hover {
  background: #f5f5f5;
}

.yu-cell-hd .yu-cell-img {
  width: 18px;
  margin-right: 8px;
}

.yu-cell-bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  height:24px;
  line-height:24px;
}

.yu-cell-ft {
  text-align: right;
  color: #999;
  position: relative;
}

.yu-cell-ft.yu-cell-icon {
  padding-right: 30rpx;
}

.yu-cell-ft.yu-cell-icon::after {
  content: '';
  display: inline-block;
  width: 8px;
  height: 8px;
  border-top: 1rpx solid #999;
  border-right: 1rpx solid #999;
  transform: rotate(45deg);
  -webkit-transform: rotate(45deg);
  vertical-align: middle;
  position: absolute;
  top: 50%;
  right: 2px;
  margin-top: -4px;
}
